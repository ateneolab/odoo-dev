<?xml version="1.0" encoding="iso-8859-1"?>

<openerp>
    <data>

        <record id="view_collection_plan_form" model="ir.ui.view">
            <field name="name">collection_plan.form</field>
            <field name="model">collection_plan.collection_plan</field>
            <field name="arch" type="xml">
                <form string="Plan de Cobranzas">
                    <field name="id" invisible="1"/>
                    <header>
                        <button name="create_new_plan" states="created" type="object" string="New plan"
                                class="oe_highlight"/>
                        <button name="reschedule_plan" states="created" type="object" string="Reschedule payments"
                                class="oe_highlight"/>
                        <button name="generate_invoice" states="created" type="object" string="Generate Invoice"
                                context="{'collection_plan_id': id, 'default_contract_id': contract_id, 'invoice_multi': True}"
                                class="oe_highlight"/>
                    </header>

                    <field name="state" invisible="1"/>
                    <sheet>
                        <group>
                            <group>
                            </group>
                            <group/>
                            <group>
                                <field name="contract_id" required="1"
                                       attrs="{'readonly': [('state', 'in', ['done'])]}"/>
                                <field name="start_date" attrs="{'readonly': [('state', 'in', ['done'])]}"/>
                            </group>
                            <group>
                                <field name="user_id" attrs="{'readonly': [('state', 'in', ['done'])]}"/>
                                <field name="end_date" attrs="{'readonly': [('state', 'in', ['done'])]}"/>
                            </group>

                            <group>
                                <field name="active_plan_id" required="1"
                                       attrs="{'readonly': [('state', 'in', ['done'])]}"
                                       domain="[('contract_id', '=', contract_id)]">
                                    <tree editable="top">
                                        <field name="balance"/>
                                        <field name="qty_dues"/>
                                        <field name="amount_monthly"/>
                                        <field name="residual"/>
                                    </tree>
                                    <form>
                                        <field name="id"/>
                                    </form>
                                </field>
                            </group>
                        </group>

                        <notebook>
                            <page string="Planned Payments">
                                <field name="payment_term_ids" domain="[('payed', '=', False)]"
                                       context="{'collection_plan_id': id, 'default_contract_id': contract_id}">
                                    <tree editable="top" colors="red:'1'=='1'">
                                        <field name="id" invisible="1"/>
                                        <field name="collection_plan_id" invisible="1"/>
                                        <field name="type"/>
                                        <field name="cash_sub_type"
                                               attrs="{'readonly': [('type', 'not in', ['cash'])], 'required': [('type', 'in', ['cash'])] }"
                                               string="Tipo de efectivo"/>
                                        <field name="amount"/>
                                        <field name="voucher_id"
                                               attrs="{'readonly': [('cash_sub_type', 'not in', ['debit_card']), ('type', 'not in', ['credit_card'])], 'required': [('cash_sub_type', 'in', ['debit_card'])] }">
                                        </field>
                                        <field name="check_id"
                                               attrs="{'readonly': [('type', 'not in', ['check'])], 'required': [('type', 'in', ['check'])] }"/>
                                        <field name="transfer_id"
                                               attrs="{'readonly': [('cash_sub_type', 'not in', ['transfer'])], 'required': [('cash_sub_type', 'in', ['transfer'])] }"/>
                                        <field name="description_other"
                                               attrs="{'readonly': [('type', 'not in', ['other'])], 'required': [('type', 'in', ['other'])] }"/>
                                        <field name="planned_date"/>
                                        <field name="payment_date"/>
                                        <field name="payed" invisible="1"/>
                                        <field name="plan_id" invisible="1"/>
                                        <field name="invisible" invisible="1"/>
                                        <!--<button name="confirm_payment" type="object" string="Pagar"-->
                                        <!--icon="gtk-apply"/> &lt;!&ndash; do_payment: pagar sin comprobante &ndash;&gt;-->
                                        <!--<button name="invoice_pay_customer" type="object" string="Register Payment"/>-->
                                        <button name="do_billing" type="object" string="Facturar" icon="gtk-ok"/>
                                        <button name="do_saling" type="object" string="Nota de venta"
                                                icon="gtk-print"/> <!-- generar nota de venta solo para este pago -->
                                    </tree>
                                </field>
                            </page>

                            <page string="Payments made">
                                <field name="payed_payment_term_ids" domain="[('payed', '=', True)]" readonly="1">
                                    <tree>
                                        <field name="type"/>
                                        <field name="cash_sub_type"
                                               attrs="{'readonly': [('type', 'not in', ['cash'])], 'required': [('type', 'in', ['cash'])] }"
                                               string="Tipo de efectivo"/>
                                        <field name="amount"/>
                                        <field name="voucher_id"
                                               attrs="{'readonly': [('cash_sub_type', 'not in', ['debit_card']), ('type', 'not in', ['credit_card'])], 'required': [('cash_sub_type', 'in', ['debit_card'])] }">
                                        </field>
                                        <field name="check_id"
                                               attrs="{'readonly': [('type', 'not in', ['check'])], 'required': [('type', 'in', ['check'])] }"/>
                                        <field name="transfer_id"
                                               attrs="{'readonly': [('cash_sub_type', 'not in', ['transfer'])], 'required': [('cash_sub_type', 'in', ['transfer'])] }"/>
                                        <field name="description_other"
                                               attrs="{'readonly': [('type', 'not in', ['other'])], 'required': [('type', 'in', ['other'])] }"/>
                                        <field name="planned_date"/>
                                        <field name="payment_date"/>
                                        <field name="payed"/>
                                        <field name="invoice_id"/>
                                        <field name="invisible" invisible="1"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Invoices">
                                <field name="invoice_ids">

                                </field>
                            </page>

                            <page string="Old plans">
                                <field name="plan_ids" readonly="1">
                                    <tree>
                                        <field name="type"/>
                                        <field name="amount_pay"/>
                                        <field name="amount_monthly"/>
                                        <field name="residual"/>
                                        <field name="qty_dues"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Internal notes">
                                <field name="notes"/>
                            </page>

                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_collection_plan_tree" model="ir.ui.view">
            <field name="name">collection_plan.collection_plan.tree</field>
            <field name="model">collection_plan.collection_plan</field>
            <field name="arch" type="xml">
                <tree string="Collection plan">
                    <field name="user_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="residual"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>


    </data>
</openerp>