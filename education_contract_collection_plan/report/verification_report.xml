                        <span>FECHAS Y ACUERDOS DE PAGO</span>
                    </div>
                    <br/>

                    <div class="row">
                        <div class="col-xs-1"/>
                        <div class="col-xs-2">
                            <span>No. cuota</span>
                        </div>
                        <div class="col-xs-4">
                            <span>Fecha de pago</span>
                        </div>
                        <div class="col-xs-4;" style="text-align: right">
                            <span>Valor de cuotas</span>
                        </div>
                        <div class="col-xs-1"/>
                    </div>
                    <t t-set="i" t-value="1"/>
                    <t t-foreach="o.payment_term_ids" t-as="line">
                        <div class="row">
                            <div class="col-xs-1"/>
                            <div class="col-xs-2">
                                <span t-esc="i"></span>
                            </div>
                            <div class="col-xs-4">
                                <span t-esc="line.planned_date"></span>
                            </div>
