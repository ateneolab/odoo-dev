                                <td style="width: 25%; text-align: left;">
                                    <t t-if="o.contract_id.owner.phone">
                                        <span t-esc="o.contract_id.owner.phone"/>,
                                    </t>
                                    <span t-esc="o.contract_id.owner.mobile"/>
