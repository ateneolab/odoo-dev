<?xml version="1.0" encoding="iso-8859-1"?>

<openerp>
    <data>


        <record id="view_collection_plan_form2" model="ir.ui.view">
            <field name="name">collection_plan.form2</field>
            <field name="model">collection_plan.collection_plan</field>
            <field name="inherit_id" ref="collection_plan.view_collection_plan_form"/>
            <field name="arch" type="xml">
                <!--<button name="reschedule_plan" position="after">
                    <button name="generate_verification" type="object" string="Generate verification"
                            class="oe_highlight"/>
                </button>-->

                <field name="active_plan_id" position="after">
                    <field name="verification_id"/>
                </field>
            </field>
        </record>

        <record id="view_verification_form" model="ir.ui.view">
            <field name="name">education_contract.verification.form</field>
            <field name="model">education_contract.verification</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="print" type="object" string="Print Verification Report"
                                class="oe_highlight" confirm="Are you sure Paymen plan is updated with Payment terms?"/>
                        <button name="to_signed" type="object" string="Mark as Signed"
                                class="oe_highlight"/>
                        <button name="generate_collection_plan" type="object" string="Generate collection plan"
                                class="oe_highlight" confirm="Are you sure Paymen plan is updated with Payment terms?"/>
                    </header>

                    <sheet>
                        <group>
                            <group>
                                <field name="contract_id"/>
                                <field name="collection_plan_id"/>
                                <field name="operating_unit_id"/>
                                <field name="verify_user_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="user_id"/>
                                <field name="verification_date"/>
                                <field name="verification_place"/>
                                <field name="agreement_duration"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Planned Payments">
                                <group>
                                    <group>
                                        <field name="plan_id"/>
                                        <button name="reschedule_plan" type="object" string="Reschedule plan"/>
                                    </group>
                                    <group>
                                        <field name="payment_term_ids" nolabel="1">
                                            <tree editable="top">
                                                <!--<field name="type"/>
                                                <field name="cash_sub_type"
                                                       attrs="{'readonly': [('type', 'not in', ['cash'])], 'required': [('type', 'in', ['cash'])] }"
                                                       string="Tipo de efectivo"/>-->
                                                <field name="amount"/>
                                                <!--<field name="voucher_id"
                                                       attrs="{'readonly': [('cash_sub_type', 'not in', ['debit_card']), ('type', 'not in', ['credit_card'])], 'required': [('cash_sub_type', 'in', ['debit_card'])] }">
                                                </field>
                                                <field name="check_id"
                                                       attrs="{'readonly': [('type', 'not in', ['check'])], 'required': [('type', 'in', ['check'])] }"/>
                                                <field name="transfer_id"
                                                       attrs="{'readonly': [('cash_sub_type', 'not in', ['transfer'])], 'required': [('cash_sub_type', 'in', ['transfer'])] }"/>
                                                <field name="description_other"
                                                       attrs="{'readonly': [('type', 'not in', ['other'])], 'required': [('type', 'in', ['other'])] }"/>-->
                                                <field name="planned_date"/>
                                                <!--<field name="payment_date"/>
                                                <field name="payed"/>-->
                                                <field name="invisible" invisible="1"/>
                                            </tree>
                                        </field>
                                    </group>
                                </group>
                            </page>
                            <page string="Contract information"></page>
                            <page string="Beneficiary information"></page>
                            <page string="Academic information"></page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_verification_tree" model="ir.ui.view">
            <field name="name">education_contract.verification.tree</field>
            <field name="model">education_contract.verification</field>
            <field name="arch" type="xml">
                <tree string="Contract Verification">
                    <field name="contract_id"/>
                    <field name="collection_plan_id"/>
                    <field name="operating_unit_id"/>
                    <field name="user_id"/>
                </tree>
            </field>
        </record>


    </data>
</openerp>