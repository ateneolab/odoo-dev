<!-- Customize - Customize Theme
     ========================================================================== -->

    <template id="zap_customize_modal" inherit_id="website_less.theme_customize" name="zap Customize Modal">
      <xpath expr="div" position="replace">
        <div id="theme_customize_modal" class="modal fade">
          <div id="zap_customize_modal">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="loading_backdrop"></div>
                <!-- Header -->
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">
                    <i class="fa fa-close fa-1x"></i>
                    <span class="sr-only">Close</span>
                  </button>
                  <h3 class="modal-title">Options</h3>
                </div>
                <!-- Body -->
                <div class="modal-body">
                  
                  <div id="zap_customize_modal_collapse" class="panel-group" role="tablist" aria-multiselectable="true">

                    <!-- Colors -->
                    <div class="panel">
                      <!-- Colors heading -->
                      <div id="zap_heading_colors" class="panel-heading" role="tab">
                        <a href="#zap_header_footer_colors" class="" data-toggle="collapse" data-parent="#zap_customize_modal_collapse" aria-expanded="true" aria-controls="zap_header_footer_colors">Colors</a>
                      </div>
                      <!-- Colors body -->
                      <div id="zap_header_footer_colors" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="zap_heading_colors">
                        <div class="panel-body">
                          <div class="row">
                            <!-- Header -->
                            <div class="col-md-12">
                              <h5 class="mt0">Header</h5>
                            </div>
                            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                              <label class="icon">
                                <input id="header_bgcolor_white" type="radio" name="header_bgcolor_var" data-xmlid="theme_zap.header_white"/>
                                <span class="white"></span>
                              </label>
                            </div>
                            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                              <label class="icon">
                                <input id="header_bgcolor_gray_lighter" type="radio" name="header_bgcolor_var" data-xmlid="theme_zap.header_light"/>
                                <span class="gray-lighter"></span>
                              </label>
                            </div>
                            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                              <label class="icon">
                                <input id="header_bgcolor_gray_darker" type="radio" name="header_bgcolor_var" data-xmlid="theme_zap.header_dark"/>
                                <span class="gray-darker"></span>
                              </label>
                            </div>
                            <!-- Schemes -->
                            <div class="col-md-12">
                              <h5>Schemes</h5>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                              <label class="icon checked">
                                <input id="scheme_color_press" type="radio" name="scheme_color_var" data-xmlid="theme_zap.colors_press"/>
                                <span class="press-alpha"></span>
                                <span class="press-beta"></span>
                                <span class="press-gamma"></span>
                                <span class="press-delta"></span>
                                <span class="press-epsilon"></span>
                              </label>
                              <label class="icon">
                                <input id="scheme_color_food" type="radio" name="scheme_color_var" data-xmlid="theme_zap.colors_food"/>
                                <span class="food-alpha"></span>
                                <span class="food-beta"></span>
                                <span class="food-gamma"></span>
                                <span class="food-delta"></span>
                                <span class="food-epsilon"></span>
                              </label>
                              <label class="icon">
                                <input id="scheme_color_environment" type="radio" name="scheme_color_var" data-xmlid="theme_zap.colors_environment"/>
                                <span class="environment-alpha"></span>
                                <span class="environment-beta"></span>
                                <span class="environment-gamma"></span>
                                <span class="environment-delta"></span>
                                <span class="environment-epsilon"></span>
                              </label>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                              <label class="icon">
                                <input id="scheme_color_agency" type="radio" name="scheme_color_var" data-xmlid="theme_zap.colors_agency"/>
                                <span class="agency-alpha"></span>
                                <span class="agency-beta"></span>
                                <span class="agency-gamma"></span>
                                <span class="agency-delta"></span>
                                <span class="agency-epsilon"></span>
                              </label>
                              <label class="icon">
                                <input id="scheme_color_technology" type="radio" name="scheme_color_var" data-xmlid="theme_zap.colors_technology"/>
                                <span class="technology-alpha"></span>
                                <span class="technology-beta"></span>
                                <span class="technology-gamma"></span>
                                <span class="technology-delta"></span>
                                <span class="technology-epsilon"></span>
                              </label>
                              <label class="icon">
                                <input id="scheme_color_travel" type="radio" name="scheme_color_var" data-xmlid="theme_zap.colors_travel"/>
                                <span class="travel-alpha"></span>
                                <span class="travel-beta"></span>
                                <span class="travel-gamma"></span>
                                <span class="travel-delta"></span>
                                <span class="travel-epsilon"></span>
                              </label>
                            </div>
                            <!-- Footer -->
                            <div class="col-md-12">
                              <h5>Footer</h5>
                            </div>
                            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
